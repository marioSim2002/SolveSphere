<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>

<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.solvesphere.FriendItemController"
      spacing="10"
      alignment="CENTER_LEFT"
      style="-fx-padding: 10; -fx-background-color: white; -fx-border-color: #ddd; -fx-border-width: 1; -fx-border-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);">

    <!-- Profile Image -->
    <ImageView fx:id="profileImage" fitHeight="40" fitWidth="40"
               style="-fx-border-radius: 50%; -fx-effect: innershadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 2);"/>

    <!-- Username -->
    <Label fx:id="usernameLabel" text="Username"
           style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

    <Pane HBox.hgrow="ALWAYS"/> <!-- Spacer -->

    <!-- View Profile Button -->
    <Button text="View" fx:id="viewProfileButton" onAction="#onViewProfileClick"
            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 12px; -fx-border-radius: 5;"/>

    <!-- delete friend Button -->
    <Button text="Unfriend" fx:id="deleteFriend" onAction="#onDeleteFriendClick"
            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 12px; -fx-border-radius: 5;"/>
</HBox>
