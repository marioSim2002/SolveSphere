<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.solvesphere.GlobalStatsController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0"
          AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">

        <Label text="Global Problem Statistics By Category" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <PieChart fx:id="globalStatsPieChart" prefWidth="500" prefHeight="350"/>

        <Button text="Close" onAction="#handleClose"
                style="-fx-background-color: #d9534f; -fx-text-fill: white; -fx-font-size: 14px;"/>
    </VBox>

</AnchorPane>
