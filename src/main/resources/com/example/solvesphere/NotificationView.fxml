<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.solvesphere.NotificationsController"
      spacing="10" style="-fx-padding: 15; -fx-background-color: white;">

    <Label text="Notifications" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <ListView fx:id="notificationList" prefHeight="400"/>

    <HBox spacing="10">
        <Button text="Mark All as Read" onAction="#markAllAsRead"/>
        <Button text="Close" onAction="#onClose"/>
    </HBox>
</VBox>
